// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


enum Status {
  BLOCK
  ACTIVE
  PENDING
}

enum Role {
  CTV
  ADMIN
  SUB_ADMIN
  ADMIN_CTV
}

enum SHIPMETHOD {
  VIETTELPOST
  OFFLINE
  GRAB
}

enum StatusNotification {
  SEEN
  UNREAD
}

enum AnnouncementPosition {
  LEFT
  RIGHT
  CENTER
}

//USER 


model User {
  id   String   @id @default(auto()) @map("_id") @db.ObjectId
  phone String @unique
  password String
  name String? 
  image String? 
  email String? @unique
  sex Boolean? 
  birthDay DateTime?
  createDate DateTime @default(now())
  updateDate DateTime @default(now())
  code Int?
  codeExpiry DateTime?
  refreshToken String?
  status Status @default(PENDING)
  role Role @default(CTV)
  orderIdList String[] @default([])
  active Boolean @default(true)
  notificationIdList String[] @default([])
  orderDetailReportIdList String [] @default([])

  @@map("user")

}

model Notification {
  id   String   @id @default(auto()) @map("_id") @db.ObjectId
  describe String?
  image String?
  status StatusNotification @default(UNREAD)
  createDate DateTime @default(now())
  updateDate DateTime @default(now())
  link String?
  userId String
  @@map("notification")
}


//CATEGORY: Adidas, Mlb, Jibbitz, Crocs, Sản phẩm khác

model Category {
  id   String   @id @default(auto()) @map("_id") @db.ObjectId
  name String
  image String?
  typeIdList String[] @default([])
  colorIdList String[] @default([])
  styleIdList String[] @default([])
  productIdList String[] @default([])
  active Boolean @default(true)
  @@map("category")
}

model Color {
  id   String   @id @default(auto()) @map("_id") @db.ObjectId
  name String
  colorCode String?
  active Boolean @default(true)
  categoryId String?

  @@map("color")
}

model Styles {
  id   String   @id @default(auto()) @map("_id") @db.ObjectId
  name String 
  categoryId String
  active Boolean @default(true)

  @@map("styles")
}

model Type{
  id   String   @id @default(auto()) @map("_id") @db.ObjectId
  name String @unique
  categoryId String

  @@map("type")
}

model Size{
  id   String   @id @default(auto()) @map("_id") @db.ObjectId
  name String @unique
  categoryId String

  @@map("size")
}

model Announcement {
  id   String   @id @default(auto()) @map("_id") @db.ObjectId
  content String
  active Boolean @default(true)
  position AnnouncementPosition
  @@map("announcement")
}


//PRODUCT

model Product {
  id   String   @id @default(auto()) @map("_id") @db.ObjectId
  name String 
  describe String?

  active Boolean @default(true)
  
  typeId String?
  styleIds String[] @default([])
  colorId String?

  createDate DateTime? @default(now())
  updateDate DateTime? @default(now())

  importPrice Float?
  ctvPrice Float?
  sellPrice Float?
  virtualPrice Float?

  numberSold Int? @default(0)
  image String?
  imageList String[] @default([])
  productCIdList String[] @default([])

  categoryId String?


  @@map("product")

}


model ProductDetail {
  id   String   @id @default(auto()) @map("_id") @db.ObjectId
  image String?
  imageList String[] @default([])

  importPrice Float?
  ctvPrice Float?
  sellPrice Float?
  virtualPrice Float?
  name String?
  active Boolean @default(true)
  quantity Int?
  numberSold Int? @default(0)

  productId String?
  orderDetailIdList String[] @default([])

  sizeId String?
  colorId String?

  @@map("productDetail")
}

//ORDER

model Orders {
  id   String   @id @default(auto()) @map("_id") @db.ObjectId
  orderCode String?
  createDate DateTime @default(now())
  updateDate DateTime @default(now())
  ctvName String?
  ctvNote String?
  adminNote String?
  noteImageList String[] @default([])
  customerName String?
  customerPhone String?
  address Json?
  addressDetail String?
  paid Boolean
  CODPrice Float?
  orderDetailIdList String[] @default([])
  deliveryCode String?
  commission Float?
  shipMethod SHIPMETHOD @default(VIETTELPOST)
  shipFee Float?
  userId String
  status String
  orderDescribe String?
  isOnline Boolean @default(true)
  @@map("orders")
}

model OrderDetail {
  id   String   @id @default(auto()) @map("_id") @db.ObjectId
  productName String?
  color String?
  size String?
  image String?
  quantity Int
  importPrice Float?
  ctvPrice Float?
  sellPrice Float?
  orderId String
  productDetailId String
  isJibbitz Boolean @default(false)
  @@map("orderDetail")
}

model Commission {
  id   String   @id @default(auto()) @map("_id") @db.ObjectId
  userId String?
  ctvName String?
  commission Float?
  bonus Float? @default(0)
  quantity Int? @default(0)
  total Float?
  note String?
  isPaid Boolean @default(false)
  month Int
  year Int
  @@map("commission")
}
//BANNER

model Banner {
  id   String   @id @default(auto()) @map("_id") @db.ObjectId
  image String?
  active Boolean @default(true)
  position Int?
  link String?
  @@map("banner")
}

